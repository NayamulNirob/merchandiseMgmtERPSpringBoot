# Stage 1: Build the JAR
FROM maven:3-eclipse-temurin-21 AS build

# Set working directory
WORKDIR /app

# Copy only essential files for dependency caching
COPY pom.xml .
RUN mvn dependency:go-offline  # Pre-fetch dependencies to optimize builds

# Copy the full source code
COPY src ./src

# Build the application without running tests
RUN mvn clean package -DskipTests

# Stage 2: Create the runtime image
FROM eclipse-temurin:21-alpine

# Set working directory
WORKDIR /app

# Copy the built JAR file from the build stage
COPY --from=build /app/target/merchandiseMgmtERP-0.0.1-SNAPSHOT.jar merchandiseMgmtERP.jar

# Expose the application port
EXPOSE 8089

# Start the Spring Boot application
ENTRYPOINT ["java", "-jar", "merchandiseMgmtERP.jar"]




